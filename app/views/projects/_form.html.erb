<%= form_for @project, :html => { :class => "form-horizontal" } do |f| %>
  <fieldset>
    <legend><%= type == :create ? 'Create A Project' : 'Edit this project' %></legend>
    <div class="control-group">
      <%= f.label :name, '*Name：', :class => "control-label" %>
      <div class="controls"><%= f.text_field :name %></div>
    </div>
    <div class="control-group">
      <%= f.label :description, 'Description：', :class => "control-label" %>
      <div class="controls"><%= f.text_area :description, :rows => 4 %></div>
    </div>
  </fieldset>

  <div id="divMsg"></div> 
  <div class="form-actions">
    <input type="submit" class="btn btn-primary span2" id="btnSubmit" value="<%= type == :create ? 'Create' : 'Save'%>" />
  </div>
<% end %>