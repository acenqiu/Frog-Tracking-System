<!DOCTYPE html>
<html>
<head>
  <title>Frog</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render :partial => 'layouts/header' %>

	<div class="container">
		<div class="row">
			<% if notice %>
				<p class="alert alert-success"><%= notice %></p>
			<% elsif alert %>
				<p class="alert alert-error"><%= alert %></p>
			<% end %>
		</div>
		
		<div class="row">
			<%= yield %>
		</div>
	</div>
</body>
</html>
