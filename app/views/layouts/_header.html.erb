<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">Frog</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="<%= @home ? 'active' : '' %>"><a href="<%= root_path %>">Home</a></li>
        </ul>

        <% if current_user %>
        <ul class="nav pull-right">
          <li><%= image_tag current_user.gravatar_url, :style => 'height:32px;margin-top:3px' %></li>
          <li><%= link_to current_user.username, current_user %></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>

          <li class="divider-vertical"></li>

          <li><a href="<%= new_project_path %>">New Project</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">All Projects <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% current_user.relavant_projects.each do |project| %>
               <li><a href="<%= project_path project %>"><%= project.name %></a></li>
              <% end %>
            </ul>
          </li>
        </ul>
        <% end %>
      </div><!-- /.nav-collapse -->
    </div>
  </div>
</div>