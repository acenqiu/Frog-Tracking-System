<%= form_for [@project, @version], :html => { :class => "form-horizontal" } do |f| %>
  <fieldset>
    <legend><%= type == :create ? 'Create a version' : 'Edit this version' %></legend>
    <div class="control-group">
      <%= f.label :version, '*Version：', :class => "control-label" %>
      <div class="controls"><%= f.text_field :version %></div>
    </div>
    <div class="control-group">
      <%= f.label :start_at, '*Start At：', :class => "control-label" %>
      <div class="controls"><%= f.text_field :start_at, :value => prettify_time(@version.start_at) %></div>
    </div>
    <div class="control-group">
      <%= f.label :end_at, '*End At：', :class => "control-label" %>
      <div class="controls"><%= f.text_field :end_at, :value => prettify_time(@version.end_at) %></div>
    </div>
    <div class="control-group">
      <%= f.label :description, 'Description：', :class => "control-label" %>
      <div class="controls"><%= f.text_area :description, :rows => 4 %></div>
    </div>
  </fieldset>

  <div id="divMsg"></div> 
  <div class="form-actions">
    <input type="submit" class="btn btn-primary span2" id="btnSubmit" value="<%= type == :create ? 'Create' : 'Save'%>" />
  </div>
<% end %>